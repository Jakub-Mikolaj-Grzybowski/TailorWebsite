@model IEnumerable<TailorWebsite.ViewModels.VM.OrderCreateViewModel>

@{
    ViewData["Title"] = "Panel Krawca - Zamówienia";
}

<section class="position-relative overflow-hidden rounded-4 text-white dark-blue mb-4 shadow p-4">
    <div class="row align-items-center">
        <div class="col-lg-8">
            <h5 class="text-warning text-uppercase letter-spacing-2 mb-2">Panel Krawca</h5>
            <h1 class="display-5 fw-bold mb-3">Zarządzanie Zamówieniami</h1>
            <p class="text-white-50 mb-0">Przeglądaj i aktualizuj statusy zamówień klientów.</p>
        </div>
        <div class="col-lg-4 text-end d-none d-lg-block">
             <i class="bi bi-scissors text-warning" style="font-size: 5rem; opacity: 0.8;"></i>
        </div>
    </div>
</section>

<div class="card border-0 shadow-sm rounded-4 overflow-hidden">
    <div class="card-body p-4">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="border-0 py-3 ps-4 rounded-start-3">ID</th>
                        <th class="border-0 py-3">Klient</th>
                        <th class="border-0 py-3">Usługa</th>
                        <th class="border-0 py-3">Ilość</th>
                        <th class="border-0 py-3">Status</th>
                        <th class="border-0 py-3">Termin</th>
                        <th class="border-0 py-3 pe-4 text-end rounded-end-3">Akcje</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="7" class="text-center py-5 text-muted">
                                <i class="bi bi-inbox display-6 d-block mb-3"></i>
                                Brak aktywnych zamówień.
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-bold">#@order.Id</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="bg-light rounded-circle flex-shrink-0 d-flex align-items-center justify-content-center me-2" style="width: 32px; height: 32px;">
                                            <i class="bi bi-person-fill text-secondary"></i>
                                        </div>
                                        <span>@order.User?.UserName</span>
                                    </div>
                                </td>
                                <td><span class="fw-semibold">@order.Service?.Name</span></td>
                                <td>@order.Quantity</td>
                                <td>
                                    @{
                                        string statusBadgeClass = order.Status.ToString() switch
                                        {
                                            "Completed" => "bg-success-subtle text-success border-success-subtle",
                                            "Pending" => "bg-warning-subtle text-warning-emphasis border-warning-subtle",
                                            "Cancelled" => "bg-danger-subtle text-danger border-danger-subtle",
                                            _ => "bg-light text-secondary border-light-subtle"
                                        };
                                    }
                                    <span class="badge @statusBadgeClass border rounded-pill px-3 py-2 fw-normal">
                                        @order.Status.ToString()
                                    </span>
                                </td>
                                <td>
                                    @if(order.OrderDueDate.HasValue)
                                    {
                                        <span class="text-muted"><i class="bi bi-calendar-event me-1"></i>@order.OrderDueDate.Value.ToShortDateString()</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted small">Oczekujący</span>
                                    }
                                </td>
                                <td class="text-end pe-4">
                                    <a asp-action="EditOrder" asp-controller="Tailor" asp-route-id="@order.Id" class="btn btn-gold btn-sm rounded-pill px-3 fw-semibold">
                                        <i class="bi bi-pencil-square me-1"></i> Edytuj
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
