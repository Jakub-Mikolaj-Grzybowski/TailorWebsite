@{
    ViewData["Title"] = "Pracownia Krawiecka";
}

<!-- Hero Section -->
<section class="position-relative overflow-hidden rounded-4 bg-dark text-white mb-5 hero-section">
    <div class="hero-overlay position-absolute top-0 start-0 w-100 h-100"></div>
    <div class="container position-relative py-5">
        <div class="row align-items-center py-4">
            <div class="col-lg-6">
                <h1 class="display-5 fw-bold mb-3">Indywidualne szycie na miarę</h1>
                <p class="lead mb-4">Zamów unikalne projekty dopasowane do Twojego stylu: suknie, garnitury, poprawki i więcej.</p>
                <a href="#uslugi" class="btn btn-primary btn-lg me-2">Nasze usługi</a>
                <a asp-controller="Orders" asp-action="Create" class="btn btn-outline-light btn-lg">Złóż zamówienie</a>
            </div>
            <div class="col-lg-6 text-center d-none d-lg-block">
                <img src="https://placehold.co/520x360" alt="Pracownia" class="img-fluid rounded shadow" />
            </div>
        </div>
    </div>
</section>

<!-- Features / Categories -->
<section class="py-4" id="kategorie">
    <div class="container">
        <div class="text-center mb-4">
            <h2 class="fw-semibold">Dlaczego my?</h2>
            <p class="text-muted">Doświadczenie, precyzja i podejście premium do każdego zamówienia.</p>
        </div>
        <div class="row g-4">
            <div class="col-sm-6 col-lg-3">
                <div class="card h-100 border-0 shadow-sm feature-tile">
                    <div class="card-body text-center">
                        <div class="mb-3 display-6">🧵</div>
                        <h5>Precyzyjne wykonanie</h5>
                        <p class="small text-muted">Każdy detal dopracowany pod Twoje wymagania.</p>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-lg-3">
                <div class="card h-100 border-0 shadow-sm feature-tile">
                    <div class="card-body text-center">
                        <div class="mb-3 display-6">🧥</div>
                        <h5>Szeroki zakres</h5>
                        <p class="small text-muted">Od poprawek po pełne projekty garniturów i sukien.</p>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-lg-3">
                <div class="card h-100 border-0 shadow-sm feature-tile">
                    <div class="card-body text-center">
                        <div class="mb-3 display-6">💡</div>
                        <h5>Kreatywne podejście</h5>
                        <p class="small text-muted">Pomoc w wyborze kroju, materiałów i dodatków.</p>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-lg-3">
                <div class="card h-100 border-0 shadow-sm feature-tile">
                    <div class="card-body text-center">
                        <div class="mb-3 display-6">⭐</div>
                        <h5>Zadowolenie klientów</h5>
                        <p class="small text-muted">Opinie i wysoka retencja stałych klientów.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Services Grid -->
<section class="py-5 bg-light" id="uslugi">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="fw-semibold">Popularne usługi</h2>
            <p class="text-muted">Przykładowe kategorie szycia i poprawek</p>
        </div>
        <div class="row g-4">
            @* Placeholder cards – can be bound dynamically later *@
            <div class="col-md-4">
                <div class="service-card card h-100 border-0 shadow-sm">
                    <img src="https://placehold.co/600x360" class="card-img-top" alt="Suknie" />
                    <div class="card-body">
                        <h5 class="card-title">Szycie sukien</h5>
                        <p class="card-text small">Indywidualne projekty wizytowe i wieczorowe.</p>
                        <a asp-controller="Orders" asp-action="Create" class="btn btn-sm btn-primary">Zamów</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="service-card card h-100 border-0 shadow-sm">
                    <img src="https://placehold.co/600x360" class="card-img-top" alt="Garnitury" />
                    <div class="card-body">
                        <h5 class="card-title">Garnitury na miarę</h5>
                        <p class="card-text small">Perfekcyjne dopasowanie i materiały premium.</p>
                        <a asp-controller="Orders" asp-action="Create" class="btn btn-sm btn-primary">Zamów</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="service-card card h-100 border-0 shadow-sm">
                    <img src="https://placehold.co/600x360" class="card-img-top" alt="Poprawki" />
                    <div class="card-body">
                        <h5 class="card-title">Poprawki krawieckie</h5>
                        <p class="card-text small">Skracanie, zwężanie, dopasowania różnych części garderoby.</p>
                        <a asp-controller="Orders" asp-action="Create" class="btn btn-sm btn-primary">Zamów</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Testimonials -->
<section class="py-5" id="opinie">
    <div class="container">
        <div class="text-center mb-4">
            <h2 class="fw-semibold">Opinie klientów</h2>
        </div>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 shadow-sm border-0 testimonial-tile">
                    <div class="card-body">
                        <p class="small mb-2">"Perfekcyjne wykonanie sukni – idealnie dopasowana i piękna!"</p>
                        <div class="small text-muted">Anna K.</div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 shadow-sm border-0 testimonial-tile">
                    <div class="card-body">
                        <p class="small mb-2">"Garnitur na miarę zrobił furorę na weselu. Polecam!"</p>
                        <div class="small text-muted">Marek P.</div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 shadow-sm border-0 testimonial-tile">
                    <div class="card-body">
                        <p class="small mb-2">"Szybkie poprawki i świetna komunikacja z pracownią."</p>
                        <div class="small text-muted">Karolina W.</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Newsletter CTA -->
<section class="py-5 bg-primary text-white newsletter-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-7">
                <h3 class="fw-semibold mb-2">Dołącz do newslettera</h3>
                <p class="mb-3">Otrzymuj informacje o nowych usługach, materiałach i promocjach.</p>
            </div>
            <div class="col-md-5">
                <form class="row g-2" onsubmit="event.preventDefault(); alert('Dziękujemy!');">
                    <div class="col-8">
                        <input type="email" class="form-control form-control-lg" placeholder="Twój e-mail" required />
                    </div>
                    <div class="col-4 d-grid">
                        <button class="btn btn-light btn-lg" type="submit">Zapisz się</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

<!-- Extra spacing bottom -->
<div class="py-4"></div>

@section Scripts {
    <script>
        // Placeholder for future interactive scripts
    </script>
}
