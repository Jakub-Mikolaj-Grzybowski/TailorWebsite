@model IEnumerable<TailorWebsite.ViewModels.VM.OrderCreateViewModel>
@{
    ViewData["Title"] = "Moje zamówienia";
}
<h2 class="mb-4">Moje zamówienia</h2>
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
<div class="mb-3">
    <a class="btn btn-outline-secondary" asp-controller="Profile" asp-action="Index">&laquo; Powrót do profilu</a>
    <a class="btn btn-primary ms-2" asp-controller="Orders" asp-action="Create">Nowe zamówienie</a>
</div>

<div class="row g-4 justify-content-start">
@if (Model != null && Model.Any())
{
    foreach (var o in Model)
    {
        <div class="col-12 col-sm-6 col-md-4 col-lg-3 d-flex">
            <div class="card shadow-sm h-100 w-100" style="margin-bottom: 16px;">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@o.Service?.Name</h5>
                    <h6 class="card-subtitle mb-2 text-muted">Status: @o.Status.ToString()</h6>
                    <ul class="list-unstyled mb-3">
                        <li><strong>Data zamówienia:</strong> @o.OrderDate.ToString("yyyy-MM-dd")</li>
                        <li><strong>@(o.UserPickupDate.HasValue ? "Termin odbioru" : "Termin wykonania"):</strong> @(o.UserPickupDate.HasValue ? o.UserPickupDate.Value.ToString("yyyy-MM-dd") : (o.OrderDueDate.HasValue ? o.OrderDueDate.Value.ToString("yyyy-MM-dd") : "Pending"))</li>
                        <li><strong>Ilość:</strong> @o.Quantity</li>
                        <li><strong>Cena:</strong> @o.TotalPrice</li>
                    </ul>
                    <div class="d-flex gap-2 mt-auto">
                        <a asp-action="Details" asp-route-id="@o.Id" class="btn btn-info flex-fill">Szczegóły</a>
                        @if (o.Status == TailorWebsite.Model.DataModels.OrderStatus.Pending)
                        {
                            <form asp-action="Cancel" method="post" class="flex-fill">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@o.Id" />
                                <button type="submit" class="btn btn-outline-danger w-100" onclick="return confirm('Anulować to zamówienie?');">Anuluj</button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="col-12">
        <div class="alert alert-info text-center">Brak zamówień.</div>
    </div>
}
</div>
 