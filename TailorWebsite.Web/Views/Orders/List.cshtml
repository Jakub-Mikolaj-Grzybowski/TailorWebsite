@model IEnumerable<TailorWebsite.ViewModels.VM.OrderCreateViewModel>
@{
    ViewData["Title"] = "Moje zamówienia";
}
<h2 class="mb-4">Moje zamówienia</h2>
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
<div class="mb-3">
    <a class="btn btn-outline-secondary" asp-controller="Profile" asp-action="Index">&laquo; Powrót do profilu</a>
    <a class="btn btn-primary ms-2" asp-controller="Orders" asp-action="Create">Nowe zamówienie</a>
</div>
<table class="table table-striped table-bordered">
    <thead class="table-light">
        <tr>
           
            <th>Data zamowienia</th>
            <th>Termin odbioru</th>
            <th>Ilość</th>
            <th>Status</th>
            
            <th>Usługa</th>
            <th>Cena</th>
        </tr>
    </thead>
    <tbody>
    @if (Model != null && Model.Any())
    {
        foreach (var o in Model)
        {
            <tr>
              
                <td>@o.OrderDate.ToString("yyyy-MM-dd")</td>
                <td>@(o.OrderDueDate.HasValue ? o.OrderDueDate.Value.ToString("yyyy-MM-dd") : "Pending")</td>
                <td>@o.Quantity</td>
                <td>@o.Status.ToString()</td>
                <td>@o.Service?.Name</td>
                <td>@o.TotalPrice</td>
                <td>
                    @if (o.Status == TailorWebsite.Model.DataModels.OrderStatus.Pending)
                    {
                        <form asp-action="Cancel" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@o.Id" />
                            <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Anulować to zamówienie?');">Anuluj</button>
                        </form>
                    }
                </td>
               
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="7" class="text-center">Brak zamówień.</td>
        </tr>
    }
    </tbody>
</table>
