@model TailorWebsite.ViewModels.VM.ProfileViewModel
@{
    ViewData["Title"] = "Mój profil";
}

<div class="row align-items-center mb-4">
    <div class="col-md-8">
        <h1 class="h2 fw-bold mb-2">Witaj @Model.Name</h1>
        <p class="text-muted mb-0"> Email: @Model.Email</p>
        <p class="text-muted mb-0"> Numer telefonu: @Model.PhoneNumber</p>
    </div>
    <div class="col-md-4 text-md-end mt-3 mt-md-0">
        <a asp-action="Index" asp-controller="AccountSettings" class="btn btn-primary">Ustawienia konta</a>
    </div>
</div>

<div class="row g-4 mb-4">
    <div class="col-sm-6 col-lg-3">
        <div class="card shadow-sm border-0 h-100 stat-tile">
            <div class="card-body">
                <div class="small text-muted mb-1">Zamówienia</div>
                <div class="fs-3 fw-semibold">@Model.OrdersCount</div>
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-lg-3">
        <div class="card shadow-sm border-0 h-100 stat-tile">
            <div class="card-body">
                <div class="small text-muted mb-1">Wymiary</div>
                <div class="fs-3 fw-semibold">@Model.SizesCount</div>
            </div>
        </div>
    </div>
</div>

<div class="card border-0 shadow-sm mb-4">
    <div class="card-body">
        <div class="d-flex flex-wrap gap-2">
            <a class="btn btn-outline-primary" asp-controller="Orders" asp-action="List">Przegląd zamówień</a>
            <a class="btn btn-outline-primary" asp-controller="Sizes" asp-action="List">Przegląd wymiarów</a>
        </div>
    </div>
</div>

<style>
    .stat-tile:hover { box-shadow: 0 .75rem 1.5rem rgba(0,0,0,.1); transform: translateY(-2px); transition:.25s; }
    .stat-tile { transition:.25s; }
</style>
