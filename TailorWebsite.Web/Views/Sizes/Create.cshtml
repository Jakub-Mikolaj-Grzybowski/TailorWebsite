@model TailorWebsite.ViewModels.VM.SizeCreateViewModel
@{
    ViewData["Title"] = "Dodaj wymiary";
}
<h2 class="mb-4">Dodaj wymiary cia≈Ça</h2>
<form asp-action="Create" method="post" class="row g-3" novalidate>
    <div class="col-12">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
    </div>
    <div class="col-md-3">
    <label asp-for="ChestCircumference" class="form-label"></label>
    <input asp-for="ChestCircumference" class="form-control" type="number" step="1" placeholder="np. 96" />
        <span asp-validation-for="ChestCircumference" class="text-danger"></span>
    </div>
    <div class="col-md-3">
    <label asp-for="WaistCircumference" class="form-label"></label>
    <input asp-for="WaistCircumference" class="form-control" type="number" step="1" placeholder="np. 78" />
        <span asp-validation-for="WaistCircumference" class="text-danger"></span>
    </div>
    <div class="col-md-3">
    <label asp-for="HipCircumference" class="form-label"></label>
    <input asp-for="HipCircumference" class="form-control" type="number" step="1" placeholder="np. 102" />
        <span asp-validation-for="HipCircumference" class="text-danger"></span>
    </div>
    <div class="col-md-3">
    <label asp-for="SleeveLength" class="form-label"></label>
    <input asp-for="SleeveLength" class="form-control" type="number" step="1" placeholder="np. 62" />
        <span asp-validation-for="SleeveLength" class="text-danger"></span>
    </div>
    <div class="col-12">
        <button type="submit" class="btn btn-primary">Zapisz</button>
        <a asp-action="List" class="btn btn-secondary ms-2">Lista</a>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function(){
            const $form = $("form");
            // Re-parse in case of partial updates
            $form.removeData("validator").removeData("unobtrusiveValidation");
            $.validator.unobtrusive.parse($form);
            // Validate on keyup for faster feedback
            if ($form.data('validator')) {
                $form.validate().settings.onkeyup = function (element) { $(element).valid(); };
            }
        })();
    </script>
}
