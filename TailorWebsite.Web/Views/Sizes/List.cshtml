@model IEnumerable<TailorWebsite.Model.DataModels.Size>
@{
    ViewData["Title"] = "Moje wymiary";
}
<h2 class="mb-4">Moje wymiary</h2>
<a asp-action="Create" class="btn btn-sm btn-success mb-3">Dodaj nowe</a>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Data</th>
            <th>Klatka</th>
            <th>Talia</th>
            <th>Biodra</th>
            <th>Rękaw</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var s in Model)
    {
        <tr>
            <td>@s.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
            <td>@s.ChestCircumference cm</td>
            <td>@s.WaistCircumference cm</td>
            <td>@s.HipCircumference cm</td>
            <td>@s.SleeveLength cm</td>
            <td>
                <form asp-action="Delete" asp-route-id="@s.Id" method="post" onsubmit="return confirm('Usunąć wpis?');" class="d-inline">
                    <button class="btn btn-sm btn-outline-danger">Usuń</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
