@model IEnumerable<TailorWebsite.ViewModels.VM.SizeCreateViewModel>
@{
    ViewData["Title"] = "Moje wymiary";
}
<h2 class="mb-4">Moje wymiary</h2>

<div class="mb-3 d-flex gap-2">
    <a class="btn btn-outline-secondary" asp-controller="Profile" asp-action="Index">&laquo; Powrót do profilu</a>
    <a asp-action="Create" class="btn btn-success">Dodaj nowe</a>
</div>
<div class="row g-4 justify-content-start">
@if (Model != null && Model.Any())
{
    foreach (var s in Model)
    {
        <div class="col-12 col-sm-6 col-md-4 col-lg-3 d-flex">
            <div class="card shadow-sm h-100 w-100" style="margin-bottom: 16px;">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Wymiar z @s.CreatedAt.ToString("yyyy-MM-dd HH:mm")</h5>
                    <ul class="list-unstyled mb-3">
                        <li><strong>Klatka:</strong> @s.ChestCircumference cm</li>
                        <li><strong>Talia:</strong> @s.WaistCircumference cm</li>
                        <li><strong>Biodra:</strong> @s.HipCircumference cm</li>
                        <li><strong>Rękaw:</strong> @s.SleeveLength cm</li>
                    </ul>
                    <div class="d-flex gap-2 mt-auto">
                        <form asp-action="Delete" asp-route-id="@s.Id" method="post" onsubmit="return confirm('Usunąć wpis?');" class="flex-fill">
                            <button class="btn btn-outline-danger w-100">Usuń</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="col-12">
        <div class="alert alert-info text-center">Brak wymiarów.</div>
    </div>
}
</div>
