@model IEnumerable<TailorWebsite.ViewModels.VM.SizeCreateViewModel>
@{
    ViewData["Title"] = "Moje wymiary";
}

@* Sekcja Nagłówkowa *@
<section class="position-relative overflow-hidden rounded-4 text-white dark-blue mb-4 shadow p-4">
    <div class="row align-items-center position-relative" style="z-index: 1;">
        <div class="col-lg-8">
            <h5 class="text-warning text-uppercase letter-spacing-2 mb-2">Profil Krawiecki</h5>
            <h1 class="display-6 fw-bold mb-2">Moje wymiary</h1>
            <p class="text-white-50 mb-0">Zarządzaj swoimi wymiarami, abyśmy mogli idealnie dopasować Twoje kreacje.</p>
        </div>
        <div class="col-lg-4 text-end d-none d-lg-block">
            <i class="bi bi-rulers text-warning" style="font-size: 5rem; opacity: 0.5;"></i>
        </div>
    </div>
</section>

@* Pasek narzędzi *@
<div class="d-flex justify-content-between align-items-center mb-4">
    <a asp-controller="Profile" asp-action="Index" class="btn btn-link text-decoration-none text-muted ps-0">
        <i class="bi bi-arrow-left me-1"></i> Powrót do profilu
    </a>
    <a asp-action="Create" class="btn btn-gold shadow-sm">
        <i class="bi bi-plus-lg me-1"></i> Dodaj nowe wymiary
    </a>
</div>

@* Lista Wymiarów *@
<div class="row g-4">
@if (Model != null && Model.Any())
{
    foreach (var s in Model)
    {
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 border-0 shadow-sm service-card position-relative overflow-hidden">
                <div class="card-header bg-transparent border-0 pt-4 px-4 pb-0 d-flex justify-content-between align-items-center">
                    <div>
                        <small class="text-muted text-uppercase fw-bold letter-spacing-1">Data pomiaru</small>
                        <h5 class="fw-bold mb-0 text-dark">@s.CreatedAt.ToString("dd.MM.yyyy")</h5>
                        <small class="text-muted">godz. @s.CreatedAt.ToString("HH:mm")</small>
                    </div>
                    <div class="bg-light rounded-circle p-2 text-warning">
                        <i class="bi bi-clipboard-data fs-4"></i>
                    </div>
                </div>

                <div class="card-body p-4">
                    <div class="row g-3">
                        <div class="col-6">
                            <div class="p-2 bg-light rounded-3 text-center h-100">
                                <small class="text-muted d-block mb-1">Klatka</small>
                                <span class="fw-bold fs-5">@s.ChestCircumference</span> <small>cm</small>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="p-2 bg-light rounded-3 text-center h-100">
                                <small class="text-muted d-block mb-1">Talia</small>
                                <span class="fw-bold fs-5">@s.WaistCircumference</span> <small>cm</small>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="p-2 bg-light rounded-3 text-center h-100">
                                <small class="text-muted d-block mb-1">Biodra</small>
                                <span class="fw-bold fs-5">@s.HipCircumference</span> <small>cm</small>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="p-2 bg-light rounded-3 text-center h-100">
                                <small class="text-muted d-block mb-1">Rękaw</small>
                                <span class="fw-bold fs-5">@s.SleeveLength</span> <small>cm</small>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-footer bg-white border-0 px-4 pb-4 pt-0">
                    <form asp-action="Delete" asp-route-id="@s.Id" method="post" 
                          onsubmit="return confirm('Czy na pewno chcesz usunąć ten wpis?');">
                        <button type="submit" class="btn btn-outline-danger btn-sm w-100 opacity-75 hover-opacity-100">
                            <i class="bi bi-trash me-2"></i>Usuń wpis
                        </button>
                    </form>
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="col-12">
        <div class="card border-0 shadow-sm text-center py-5 rounded-4">
            <div class="card-body">
                <div class="bg-light rounded-circle p-4 d-inline-block mb-3">
                    <i class="bi bi-rulers text-muted" style="font-size: 3rem;"></i>
                </div>
                <h3 class="fw-bold">Brak zapisanych wymiarów</h3>
                <p class="text-muted mb-4">Nie dodałeś jeszcze żadnych wymiarów. Uzupełnij je, aby ułatwić proces zamawiania.</p>
                <a asp-action="Create" class="btn btn-gold px-4 py-2">
                    Dodaj pierwsze wymiary
                </a>
            </div>
        </div>
    </div>
}
</div>

