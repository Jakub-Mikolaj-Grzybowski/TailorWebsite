@model TailorWebsite.ViewModels.VM.OrderCreateViewModel

@{
    ViewData["Title"] = "Edytuj Zamówienie";
}

<h1>@ViewData["Title"]</h1>

<h4>Zamówienie #@Model.Id</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditOrder">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            
            <div class="form-group mb-3">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<TailorWebsite.Model.DataModels.OrderStatus>()"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="OrderDueDate" class="control-label">Termin odbioru</label>
                <input asp-for="OrderDueDate" class="form-control" type="date" />
                <span asp-validation-for="OrderDueDate" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
                <a asp-action="ManageOrders" class="btn btn-secondary">Anuluj</a>
            </div>
        </form>
    </div>
</div>
