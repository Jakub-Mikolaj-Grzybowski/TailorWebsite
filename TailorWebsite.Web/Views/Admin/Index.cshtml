@model IEnumerable<TailorWebsite.ViewModels.VM.AdminUserViewModel>

@{
    ViewData["Title"] = "Admin Panel - Users";
}

<h1>Users</h1>

<div class="mb-3">
    <a asp-action="ManageOrders" class="btn btn-primary">Zarządzaj zamówieniami</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                Roles
            </th>
            <th>Usun</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @string.Join(", ", item.Roles)
            </td>
            <td>
                <form asp-action="DeleteUser" asp-route-userId="@item.UserId" method="post" onsubmit="return confirm('Are you sure you want to delete this user?');">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </td>
        </tr>
}
    </tbody>
</table>
