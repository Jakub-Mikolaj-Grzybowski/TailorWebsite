@model TailorWebsite.ViewModels.VM.ReviewViewModel

@{
    ViewData["Title"] = "Oceń zamówienie";
}

<h2>Oceń zamówienie</h2>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="OrderId" />

    <div class="form-group">
        <label asp-for="Rating"></label>
        <select asp-for="Rating" class="form-control">
            <option value="1">1 - Bardzo źle</option>
            <option value="2">2 - Źle</option>
            <option value="3">3 - Średnio</option>
            <option value="4">4 - Dobrze</option>
            <option value="5">5 - Bardzo dobrze</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Comment"></label>
        <textarea asp-for="Comment" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Wyślij ocenę</button>
</form>
