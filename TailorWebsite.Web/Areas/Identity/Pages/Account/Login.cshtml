@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-lg p-4" style="max-width: 400px; width: 100%; border-radius: 1.5rem;">
        <div class="text-center mb-4">
            <span class="mb-2" style="font-size: 2.5rem; color: #0d6efd;"><i class="bi bi-person-circle"></i></span>
            <h2 class="fw-bold">Logowanie</h2>
        </div>
        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-2" role="alert"></div>
            <div class="mb-3">
                <label asp-for="Input.Email" class="form-label fw-semibold">Email</label>
                <input asp-for="Input.Email" class="form-control rounded-pill" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.Password" class="form-label fw-semibold">Hasło</label>
                <input asp-for="Input.Password" class="form-control rounded-pill" autocomplete="current-password" aria-required="true" placeholder="Hasło" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-check mb-3">
                <input class="form-check-input" asp-for="Input.RememberMe" />
                <label asp-for="Input.RememberMe" class="form-check-label">Zapamiętaj mnie</label>
            </div>
            <button id="login-submit" type="submit" class="btn btn-primary w-100 rounded-pill py-2 fw-bold">Zaloguj się</button>
            <div class="mt-3 d-flex flex-column gap-2">
                <a id="forgot-password" asp-page="./ForgotPassword" class="link-primary">Nie pamiętasz hasła?</a>
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="link-primary">Załóż nowe konto</a>
                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="link-primary">Wyślij ponownie potwierdzenie e-mail</a>
            </div>
        </form>
        @if (Model.ExternalLogins?.Count > 0)
        {
            <hr />
            <div class="text-center mb-2">Zaloguj się przez:</div>
            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div class="d-flex flex-wrap gap-2 justify-content-center">
                    @foreach (var provider in Model.ExternalLogins!)
                    {
                        <button type="submit" class="btn btn-outline-primary rounded-pill px-3" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                            <i class="bi bi-box-arrow-in-right"></i> @provider.DisplayName
                        </button>
                    }
                </div>
            </form>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
