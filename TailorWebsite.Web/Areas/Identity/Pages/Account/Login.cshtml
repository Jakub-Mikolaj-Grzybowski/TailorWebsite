@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow p-4 p-lg-5 dark-blue rounded-4 border-0" style="max-width: 450px; width: 100%;">
        <div class="text-center mb-4">
            <span class="mb-2" style="font-size: 2.5rem;"><i class="bi bi-person-circle text-warning"></i></span>
            <h2 class="fw-bold mt-2">Logowanie</h2>
            <p class="text-white-50">Witaj ponownie w naszym zakładzie</p>
        </div>
        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-2" role="alert"></div>
            <div class="mb-3">
                <label asp-for="Input.Email" class="form-label fw-semibold text-white">Email</label>
                <input asp-for="Input.Email" class="form-control rounded-pill" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.Password" class="form-label fw-semibold text-white">Hasło</label>
                <input asp-for="Input.Password" class="form-control rounded-pill" autocomplete="current-password" aria-required="true" placeholder="Hasło" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-check mb-3">
                <input class="form-check-input" asp-for="Input.RememberMe" />
                <label asp-for="Input.RememberMe" class="form-check-label text-white">Zapamiętaj mnie</label>
            </div>
            <button id="login-submit" type="submit" class="btn btn-gold w-100 rounded-pill py-2 fw-bold shadow-sm">Zaloguj się</button>
            <div class="mt-3 d-flex flex-column gap-2 text-center">
          
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none text-warning small">Załóż nowe konto</a>
             
            </div>
        </form>
        @if (Model.ExternalLogins?.Count > 0)
        {
            <hr class="border-secondary" />
            <div class="text-center mb-3 text-white-50 small">LUB ZALOGUJ PRZEZ</div>
            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div class="d-flex flex-wrap gap-2 justify-content-center">
                    @foreach (var provider in Model.ExternalLogins!)
                    {
                        <button type="submit" class="btn btn-light rounded-pill px-4 fw-semibold" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                            <i class="bi bi-box-arrow-in-right me-2"></i>@provider.DisplayName
                        </button>
                    }
                </div>
            </form>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
