@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}



<div class="d-flex justify-content-center align-items-center" style="min-height: 90vh;">
    <div class="bg-white shadow rounded-4 p-4" style="max-width: 400px; width: 100%;">
        <h1 class="text-center fw-bold mb-4" style="font-size:2.5rem;">Załóż konto</h1>
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div class="mb-3">
                <label asp-for="Input.Name" class="form-label fw-semibold">Imię</label>
                <input asp-for="Input.Name" class="form-control rounded-pill bg-light" placeholder="Imię" />
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.Surname" class="form-label fw-semibold">Nazwisko</label>
                <input asp-for="Input.Surname" class="form-control rounded-pill bg-light" placeholder="Nazwisko" />
                <span asp-validation-for="Input.Surname" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.Email" class="form-label fw-semibold">Email</label>
                <input asp-for="Input.Email" class="form-control rounded-pill bg-light" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.Password" class="form-label fw-semibold">Hasło</label>
                <input asp-for="Input.Password" class="form-control rounded-pill bg-light" autocomplete="new-password" aria-required="true" placeholder="Hasło" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.ConfirmPassword" class="form-label fw-semibold">Powtórz hasło</label>
                <input asp-for="Input.ConfirmPassword" class="form-control rounded-pill bg-light" autocomplete="new-password" aria-required="true" placeholder="Powtórz hasło" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary rounded-pill mb-3" style="font-size:1.2rem;">Załóż konto</button>
        </form>
        <div class="text-center mb-2">
            <a class="text-decoration-none" href="/Identity/Account/Login">Masz już konto? Zaloguj się</a>
        </div>
        <div class="text-center mb-2">
            <a class="text-decoration-none" href="/Identity/Account/ForgotPassword">Nie pamiętasz hasła?</a>
        </div>
        <div class="text-center mb-2">
            <a class="text-decoration-none" href="/Identity/Account/ResendEmailConfirmation">Wyślij ponownie potwierdzenie e-mail</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
